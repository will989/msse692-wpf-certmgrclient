<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
  <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <!--
  This stores information in the mylogfile.txt file.  
  -->
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="mylogfile.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="10MB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline%exception"/>
      </layout>
    </appender>
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="RollingFileAppender"/>
    </root>
   </log4net>
    <system.serviceModel>
        <bindings>
            <basicHttpBinding>
                <binding name="BasicHttpBinding_ICertificateManagerService" />
                <binding name="BasicHttpBinding_ICertificateWarehouseService" />
            </basicHttpBinding>
            <wsHttpBinding>
                <binding name="WSHttpBinding_ICalculator" />
            </wsHttpBinding>
        </bindings>
        <client>
            <endpoint address="http://win-iv85psjvcob/CertificateManagerService.svc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_ICertificateManagerService"
                contract="CertificateManagerService.ICertificateManagerService"
                name="BasicHttpBinding_ICertificateManagerService" />
            <endpoint address="http://win-iv85psjvcob/CertificateWarehouseService.svc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_ICertificateWarehouseService"
                contract="CertificateWarehouseService.ICertificateWarehouseService"
                name="BasicHttpBinding_ICertificateWarehouseService" />
            <endpoint address="http://win-iv85psjvcob:8000/ServiceModelSamples/service"
                binding="wsHttpBinding" bindingConfiguration="WSHttpBinding_ICalculator"
                contract="CalculatorService.ICalculator" name="WSHttpBinding_ICalculator">
                <identity>
                    <userPrincipalName value="Administrator@williams.local" />
                </identity>
            </endpoint>
        </client>
    </system.serviceModel>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
